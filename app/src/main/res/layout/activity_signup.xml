<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFF3F9"
    android:gravity="center"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="774dp"
        android:background="@color/white"
        android:foregroundTint="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button30"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/list"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="270dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="Sign up"
                    android:textColor="#3F48CC"
                    android:textSize="25sp" />


            </TableRow>


        </TableLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="성명"
            android:textColor="#3F48CC"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/textView11"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  김송이"
            android:inputType="textEmailAddress"
            android:privateImeOptions="textPersonName"
            android:singleLine="true"
            android:textColor="#7E7777"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="전화번호"
            android:textColor="#3F48CC"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/textView13"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  010-1234-5678"
            android:inputType="textEmailAddress"
            android:privateImeOptions="number"
            android:singleLine="true"
            android:textColor="#7E7777"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="이메일"
            android:textColor="#3F48CC"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/textView4"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  happy@email.com"
            android:inputType="textEmailAddress"
            android:privateImeOptions="textEmailAddress"
            android:singleLine="true"
            android:textColor="#7E7777"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="#3F48CC"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textView6"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  *******"
            android:inputType="textPassword"
            android:privateImeOptions="defaultInputmode=english"
            android:singleLine="true"
            android:textColor="#7E7777"
            android:textSize="23sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="비밀번호 재확인"
            android:textColor="#3F48CC"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textView8"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  *******"
            android:inputType="textPassword"
            android:privateImeOptions="defaultInputmode=english"
            android:singleLine="true"
            android:textColor="#7E7777"
            android:textSize="23sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />


        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="회원가입하기"
            android:textAlignment="gravity"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible" />


    </LinearLayout>

</LinearLayout>