<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFF3F9"
    android:gravity="center"
    tools:context=".NotificationActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="778dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button14"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/list" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="298dp"
                    android:layout_height="48dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="공 지 사 항"
                    android:textColor="#3F48CC"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/pngegg" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button45"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Happy Parking 변경 약관 공지 \n2022.10.24"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button46"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="서비스 점검 안내(9/27~10/7) \n2022.09.27"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button47"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="[안내] 채팅 서비스 오픈 안내\n2022.08.09"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button48"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="[이벤트 종료] Happy Parking 회원 대상 수상자\n2022.06.10"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button49"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="'서울특별시 성동구' 주정차 단속 알림 서비스\n2022.05.15"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button50"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="[안내] 서비스 오픈 안내\n2022.04.20"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button51"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="[이벤트 종료] Happy Parking 투어 이벤트 당첨자\n2022.03.15"
            android:textAlignment="viewStart" />
    </LinearLayout>

</LinearLayout>